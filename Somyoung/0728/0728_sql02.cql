SELECT
   TYPE.ID AS 'ID',
   NAME.FISH_NAME AS 'FISH_NAME',
   TYPE.MAX_LENGTH AS 'LENGTH'
FROM
    FISH_NAME_INFO NAME
    INNER JOIN
    (SELECT
        ID,
        MAX(IFNULL(LENGTH,10)) AS 'MAX_LENGTH',
        FISH_TYPE
    FROM FISH_INFO
     GROUP BY FISH_TYPE
    HAVING MAX(IFNULL(LENGTH, 10)) = (SELECT IFNULL(LENGTH,10) FROM FISH_INFO)) TYPE
     ON NAME.FISH_TYPE = TYPE.FISH_TYPE
ORDER BY 1;
