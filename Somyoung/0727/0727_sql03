# 문제 링크 : https://school.programmers.co.kr/learn/courses/30/lessons/299310

SELECT
    YEAR_TABLE.YEAR AS 'YEAR',
    MAXIMUM.MAX_SIZE - YEAR_TABLE.SIZE AS 'YEAR_DEV',
    YEAR_TABLE.ID AS 'ID'
FROM
    (SELECT
        ID,
        YEAR(DIFFERENTIATION_DATE) AS 'YEAR',
        SIZE_OF_COLONY AS 'SIZE'
    FROM ECOLI_DATA) YEAR_TABLE
    LEFT JOIN
    (SELECT
        YEAR(DIFFERENTIATION_DATE) AS 'YEAR',
        MAX(SIZE_OF_COLONY) AS 'MAX_SIZE'
     FROM ECOLI_DATA
     GROUP BY YEAR(DIFFERENTIATION_DATE)) MAXIMUM
     ON YEAR_TABLE.YEAR = MAXIMUM.YEAR
ORDER BY 1, 2;
