SELECT
    B.BOOK_ID AS 'BOOK_ID',
    A.AUTHOR_NAME AS 'AUTHOR_NAME',
    B.PUBLISHED_DATE AS 'PUBLISHED_DATE'
FROM
    (SELECT BOOK_ID, AUTHOR_ID, DATE_FORMAT(PUBLISHED_DATE, '%Y-%m-%d') AS 'PUBLISHED_DATE' FROM BOOK
    WHERE CATEGORY = '경제') B
    INNER JOIN AUTHOR A
    ON A.AUTHOR_ID = B.AUTHOR_ID
ORDER BY 3;
